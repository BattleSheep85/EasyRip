{
  "name": "easyrip",
  "version": "0.1.0",
  "description": "Simple GUI for MakeMKV disc backup automation",
  "main": "src/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "start": "electron .",
    "test": "node --test tests/utils.test.js",
    "test:utils": "node --test tests/utils.test.js",
    "test:e2e": "node --test tests/gui.test.js",
    "test:gui:debug": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron . --remote-debugging-port=9222\""
  },
  "keywords": [
    "makemkv",
    "dvd",
    "bluray",
    "ripping",
    "backup"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "playwright": "^1.57.0",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ssh2-sftp-client": "^12.0.1"
  },
  "build": {
    "appId": "com.easyrip.app",
    "productName": "EasyRip",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "src/**/*",
      "dist-electron/**/*",
      "package.json"
    ]
  }
}
