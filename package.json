{
  "name": "easyrip",
  "version": "0.1.2",
  "description": "Simple GUI for MakeMKV disc backup automation",
  "main": "src/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --win",
    "dist:dir": "npm run build && electron-builder --win --dir",
    "generate-icon": "node scripts/generate-icon.js",
    "start": "electron .",
    "test": "node --test tests/**/*.test.js",
    "test:utils": "node --test tests/utils.test.js",
    "test:makemkv": "node --test tests/makemkv.test.js",
    "test:drives": "node --test tests/drives.test.js",
    "test:logger": "node --test tests/logger.test.js",
    "test:settings": "node --test tests/settings.test.js",
    "test:ipc": "node --test tests/ipc-handlers.test.js",
    "test:unit": "node --test tests/utils.test.js tests/makemkv.test.js tests/drives.test.js tests/logger.test.js tests/settings.test.js tests/ipc-handlers.test.js",
    "test:e2e": "node --test tests/gui.test.js",
    "test:gui:debug": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron . --remote-debugging-port=9222\""
  },
  "keywords": [
    "makemkv",
    "dvd",
    "bluray",
    "ripping",
    "backup"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "playwright": "^1.57.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.10.1",
    "ssh2-sftp-client": "^12.0.1"
  },
  "build": {
    "appId": "com.easyrip.app",
    "productName": "EasyRip",
    "copyright": "Copyright Â© 2024",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "dist-renderer/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build/installers",
        "to": "installers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EasyRip",
      "include": "build/installer.nsh"
    },
    "asar": true,
    "npmRebuild": false,
    "publish": {
      "provider": "github",
      "owner": "BattleSheep85",
      "repo": "EasyRip",
      "releaseType": "release"
    }
  }
}
