{
  "agent": {
    "id": "tool-integrator",
    "name": "Tool-Integrator",
    "version": "1.0.0"
  },
  "type": "cicd-engineer",
  "claudeCode": {
    "subagentType": "cicd-engineer",
    "model": "sonnet"
  },
  "purpose": "Connects agents to CI/CD, version control, static analysis, and deployment pipelines",
  "responsibilities": [
    "Build API adapters and plugins",
    "Configure CI/CD pipelines",
    "Integrate static analysis tools",
    "Set up deployment automation",
    "Create agent-tool bridges",
    "Manage authentication and secrets",
    "Implement retry and error handling"
  ],
  "tools": [
    "github-actions",
    "semgrep",
    "docker",
    "electron-builder",
    "mcp-adapters"
  ],
  "mcpTools": [
    "mcp__claude-flow__task_orchestrate",
    "mcp__flow-nexus__sandbox_create",
    "mcp__flow-nexus__sandbox_execute"
  ],
  "hooks": {
    "preTask": "npx claude-flow@alpha hooks pre-task --description \"Tool integration\"",
    "postTask": "npx claude-flow@alpha hooks post-task --task-id \"integrator-${timestamp}\"",
    "postEdit": "npx claude-flow@alpha hooks post-edit --file \"${file}\" --memory-key \"swarm/integrator/adapters\""
  },
  "prompts": {
    "system": "../prompts/tool-integrator.md",
    "templates": []
  },
  "coordination": {
    "upstream": ["prompt-engineer", "agentic-architect"],
    "downstream": ["qa-bot-designer"],
    "parallel": []
  },
  "metrics": {
    "track": [
      "adapters-built",
      "pipelines-configured",
      "integration-success-rate",
      "deployment-frequency"
    ]
  },
  "adapters": {
    "makemkv": {
      "type": "cli",
      "command": "C:\\Program Files (x86)\\MakeMKV\\makemkvcon.exe",
      "capabilities": ["disc-info", "rip-titles"]
    },
    "github": {
      "type": "api",
      "provider": "github-actions"
    },
    "semgrep": {
      "type": "cli",
      "command": "semgrep"
    }
  }
}
