{
  "agent": {
    "id": "prompt-engineer",
    "name": "Prompt Engineer",
    "version": "1.0.0"
  },
  "type": "researcher",
  "claudeCode": {
    "subagentType": "researcher",
    "model": "sonnet"
  },
  "purpose": "Crafts, tests, and iterates prompt templates that steer agents toward correct, maintainable code",
  "responsibilities": [
    "Design and iterate prompt templates",
    "A/B test prompt variations",
    "Optimize for code quality metrics",
    "Version control prompts",
    "Document prompt patterns",
    "Measure token efficiency",
    "Pair with Agentic Architect on prompt architecture"
  ],
  "tools": [
    "promptfoo",
    "prompt-versioning",
    "metrics-analysis",
    "a-b-testing"
  ],
  "mcpTools": [
    "mcp__claude-flow__memory_usage",
    "mcp__claude-flow__neural_patterns"
  ],
  "hooks": {
    "preTask": "npx claude-flow@alpha hooks pre-task --description \"Prompt design\"",
    "postTask": "npx claude-flow@alpha hooks post-task --task-id \"prompt-${timestamp}\"",
    "postEdit": "npx claude-flow@alpha hooks post-edit --file \"${file}\" --memory-key \"swarm/prompts/versions\""
  },
  "prompts": {
    "system": "../prompts/prompt-engineer.md",
    "templates": [
      "../prompts/hello-world.md"
    ]
  },
  "coordination": {
    "upstream": ["agentic-architect"],
    "downstream": ["tool-integrator"],
    "parallel": ["qa-bot-designer"]
  },
  "metrics": {
    "track": [
      "prompts-created",
      "prompts-iterated",
      "token-efficiency",
      "code-quality-score"
    ]
  }
}
