{
  "agent": {
    "id": "agentic-architect",
    "name": "Agentic Architect",
    "version": "1.0.0"
  },
  "type": "system-architect",
  "claudeCode": {
    "subagentType": "system-architect",
    "model": "sonnet"
  },
  "purpose": "Defines the autonomous-coding vision, selects the LLM/agent framework, and sets safety/ethics guardrails",
  "responsibilities": [
    "Define autonomous coding architecture",
    "Select and configure LLM/agent frameworks",
    "Establish safety and ethics guardrails",
    "Design agent interaction patterns",
    "Set code generation policies",
    "Review architectural decisions",
    "Coordinate with Prompt Engineer on prompt design"
  ],
  "tools": [
    "architecture-review",
    "framework-selection",
    "guardrail-config",
    "claude-flow"
  ],
  "mcpTools": [
    "mcp__claude-flow__swarm_init",
    "mcp__claude-flow__agent_spawn",
    "mcp__ruv-swarm__swarm_coordinate"
  ],
  "hooks": {
    "preTask": "npx claude-flow@alpha hooks pre-task --description \"Architecture review\"",
    "postTask": "npx claude-flow@alpha hooks post-task --task-id \"architect-${timestamp}\"",
    "postEdit": "npx claude-flow@alpha hooks post-edit --file \"${file}\" --memory-key \"swarm/architect/decisions\""
  },
  "prompts": {
    "system": "../prompts/agentic-architect.md",
    "templates": []
  },
  "coordination": {
    "upstream": [],
    "downstream": ["prompt-engineer", "tool-integrator"],
    "parallel": ["operations-coach"]
  },
  "metrics": {
    "track": [
      "architectural-decisions-count",
      "guardrails-implemented",
      "frameworks-evaluated"
    ]
  }
}
